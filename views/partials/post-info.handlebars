<article class="post card">
    <div class="title">
        <h1>{{title}}</h1>
    </div>
    <div class="meta">
        by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comment.length}} {{format_plural "comment" comment.length}}</a>
    </div>
    <div class="card-body">
        <p>
            {{content}}
        </p>
    </div>
</article>